; EditorConfig is awesome: http://EditorConfig.org

; NOTE: `;vim:` designate special comments for vim

root = true  ; top-most EditorConfig file

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,json}]
; Javascript interpreter to be invoked by default 'node'
;bin=node
indent_size = 2

[*.yaml]
indent_size = 2

[*.css]
indent_size = 2

[*.{html,xml}]
; ;vim:max_char=99:brace_style=expand
indent_size = 2

[*.py]

[Makefile]
indent_style = tab
