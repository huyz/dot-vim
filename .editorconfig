# EditorConfig is awesome: http://EditorConfig.org

# NOTE: `;vim:` designate special comments for vim

root = true  # top-most EditorConfig file

[*]
indent_size = 4
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sh,bash}]
indent_size = 4
# shfmt options:
switch_case_indent = true
space_redirects = true

[{*.zsh,.zsh*,.zlog*,.zprofile*,.zprezto*}]
indent_size = 2 # for legacy and to visually differentiate from bash

[{*.vim,.vimrc*}]
indent_size = 2 # for legacy

[{*.gitconfig*,.git/config}]
indent_size = 4
indent_style = tab # Because that's how git writes files

[*.{js,jsx,ts,tsx,json}]
# Javascript interpreter to be invoked by default 'node'
#bin=node
indent_size = 2

[*.yaml]
indent_size = 2

[*.css]
indent_size = 2

[*.{html,xml}]
# ;vim:max_char=99:brace_style=expand
indent_size = 2

[*.md]
# 2022-06-18 Pandoc: lists need 4 spaces per https://hyperpolyglot.org/lightweight-markup#grouping-alignment
indent_size = 4

[Makefile]
indent_style = tab
